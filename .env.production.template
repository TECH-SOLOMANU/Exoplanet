# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
MONGODB_URL=mongodb://your-cluster.mongodb.net/exoplanet_db?retryWrites=true&w=majority
MONGODB_PASSWORD=your_mongodb_password
DATABASE_NAME=exoplanet_production

# Redis Configuration (for caching and background tasks)
REDIS_URL=redis://your-redis-instance:6379

# NASA API Configuration
NASA_API_KEY=your_nasa_api_key_here
NASA_BASE_URL=https://exoplanetarchive.ipac.caltech.edu/TAP/sync

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-domain.com

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Frontend Configuration
REACT_APP_API_URL=https://your-backend-domain.com
REACT_APP_ENVIRONMENT=production
REACT_APP_SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-models-bucket
AWS_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Performance Configuration
WORKERS=4
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=60

# NASA Space Apps Challenge Specific
COMPETITION_MODE=true
DEMO_DATA_ENABLED=true
AUTO_UPDATE_MODELS=true