# Data Processing
DATA_PATH=./data
BATCH_SIZE=32
MAX_UPLOAD_SIZE=52428800  # 50MB

# Scheduling
FETCH_SCHEDULE_HOURS=24

# Redis for Celery
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Development
DEBUG=True
DEVELOPMENT=True