# NASA Space Apps Challenge 2025 - Exoplanet Detection Platform
# Environment Configuration

# Database
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=exoplanet_db

# Security
SECRET_KEY=nasa-space-apps-challenge-2025-exoplanet-detection-super-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
ALLOWED_HOSTS=["*"]

# NASA APIs
NASA_EXOPLANET_ARCHIVE_URL=https://exoplanetarchive.ipac.caltech.edu/TAP/sync
NASA_MAST_URL=https://mast.stsci.edu/api/v0.1

# ML Models
MODEL_PATH=./models
TABULAR_MODEL_PATH=./models/tabular_model
